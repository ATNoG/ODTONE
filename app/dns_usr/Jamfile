project dns_usr
	: requirements
	  <include>../include
	;

local rule explicit-alias ( id : targets + )
{
    alias $(id) : $(targets) ;
    explicit $(id) ;
}


exe dns_usr
	: main.cpp
	  dns_usr.cpp
	  query_book.cpp
	  log.cpp
	  ../../lib/odtone//odtone
	  /boost//program_options
	;

install install
	: dns_usr
	  dns_usr.conf
	: <location>../../dist
	;

